### Test 16: CLEANUP - Delete created reading club
DELETE {{baseUrl}}/reading-clubs/{{testReadingClubId}}
Authorization: {{token}}

> {%
client.test("Delete reading club should return 204, 404, or 405", function() {
    client.assert(response.status === 204 || response.status === 404 || response.status === 405, 
                 "Expected status 204 (deleted), 404 (not found), or 405 (method not allowed)");
});

if (response.status === 204) {
    client.log("‚úÖ Reading club successfully deleted: " + client.global.get("testReadingClubName"));
} else if (response.status === 405) {
    client.log("‚ö†Ô∏è Delete endpoint not implemented - reading club will remain: " + client.global.get("testReadingClubName"));
} else {
    client.log("‚ö†Ô∏è Could not delete reading club: " + client.global.get("testReadingClubName"));
}

// Clear global variables
client.global.clear("testReadingClubId");
client.global.clear("testReadingClubName");
client.log("üßπ Cleanup completed - global variables cleared");
%}

