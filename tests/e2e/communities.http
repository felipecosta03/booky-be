### Test 13: CLEANUP - Delete created community (if delete endpoint exists)
# Note: This test assumes there's a DELETE endpoint for communities
# If not available, this test will fail gracefully
DELETE {{baseUrl}}/communities/{{createdCommunityId}}
Authorization: {{token}}

> {%
client.test("Delete community should return 204 or 404", function() {
    client.assert(response.status === 204 || response.status === 404 || response.status === 405, 
                 "Expected status 204 (deleted), 404 (not found), or 405 (method not allowed)");
});

if (response.status === 204) {
    client.log("✅ Community successfully deleted: " + client.global.get("createdCommunityName"));
} else if (response.status === 405) {
    client.log("⚠️ Delete endpoint not implemented - community will remain: " + client.global.get("createdCommunityName"));
} else {
    client.log("⚠️ Could not delete community: " + client.global.get("createdCommunityName"));
}

// Clear global variables
client.global.clear("createdCommunityId");
client.global.clear("createdCommunityName");
%}

