    client.assert(response.body.description !== undefined, "Description should be present");
    client.assert(response.body.community_id !== undefined, "Community ID should be present");
    client.assert(response.body.book_id !== undefined, "Book ID should be present");
});

client.log("‚úÖ Retrieved reading club: " + response.body.name);
%}

