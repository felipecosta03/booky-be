### Test 12: CLEANUP - Delete created reading club (if delete endpoint exists)
DELETE {{baseUrl}}/reading-clubs/{{createdReadingClubId}}
Authorization: {{token}}

> {%
client.test("Delete reading club should return 204 or 404", function() {
    client.assert(response.status === 204 || response.status === 404 || response.status === 405, 
                 "Expected status 204 (deleted), 404 (not found), or 405 (method not allowed)");
});

if (response.status === 204) {
    client.log("✅ Reading club successfully deleted: " + client.global.get("createdReadingClubName"));
} else if (response.status === 405) {
    client.log("⚠️ Delete endpoint not implemented - reading club will remain: " + client.global.get("createdReadingClubName"));
} else {
    client.log("⚠️ Could not delete reading club: " + client.global.get("createdReadingClubName"));
}

// Clear global variables
client.global.clear("createdReadingClubId");
client.global.clear("createdReadingClubName");
%}

